{
  "name": "manifest",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "manifest:dev": "turbo run dev --filter=@manifest/backend --filter=@manifest/frontend",
    "manifest:build": "turbo run build --filter=@manifest/backend --filter=@manifest/frontend --filter=@manifest/shared --filter=@manifest/nodes",
    "manifest:lint": "turbo run lint --filter=@manifest/backend --filter=@manifest/frontend",
    "manifest:test": "turbo run test --filter=@manifest/backend",
    "manifest-ui:dev": "turbo run dev --filter=manifest-ui",
    "manifest-ui:build": "turbo run build --filter=manifest-ui",
    "manifest-ui:lint": "turbo run lint --filter=manifest-ui",
    "manifest-ui:test": "turbo run test --filter=manifest-ui",
    "prepare": "husky",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "tar": "^7.5.4",
      "tmp": "^0.2.4",
      "brace-expansion": "^2.0.2",
      "diff": "^5.2.2"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnfst/manifest.git"
  },
  "author": "MNFST, Inc",
  "license": "MIT"
}
