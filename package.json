{
  "name": "manifest",
  "private": true,
  "description": "Open-source observability for AI agents â€” track costs, tokens, messages, and performance",
  "homepage": "https://manifest.build",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnfst/manifest"
  },
  "bugs": {
    "url": "https://github.com/mnfst/manifest/issues"
  },
  "author": "MNFST Inc.",
  "license": "MIT",
  "keywords": [
    "ai-observability",
    "ai-agent",
    "llm-monitoring",
    "opentelemetry",
    "otlp",
    "cost-tracking",
    "token-tracking",
    "observability",
    "telemetry",
    "nestjs",
    "solidjs"
  ],
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/openclaw-plugin",
    "packages/manifest-server"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "start": "node packages/backend/dist/main.js",
    "build:plugin": "npm run build --workspace=packages/openclaw-plugin",
    "publish:plugin": "npm publish --access public --workspace=packages/openclaw-plugin",
    "check:api-prefix": "node scripts/check-api-prefix.js",
    "lint": "eslint packages/backend/src packages/frontend/src",
    "format": "prettier --write 'packages/*/src/**/*.{ts,tsx,css}'",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "turbo": "^2"
  }
}
