{
  "name": "manifest",
  "version": "4.11.10",
  "description": "The 1-file micro-backend",
  "author": "Manifest",
  "license": "MIT",
  "main": "dist/manifest/main.js",
  "types": "dist/manifest/main.d.ts",
  "homepage": "https://manifest.build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnfst/manifest.git"
  },
  "bugs": {
    "url": "https://github.com/mnfst/manifest/issues"
  },
  "keywords": [
    "manifest",
    "backend",
    "micro-backend",
    "api",
    "rest",
    "admin",
    "database",
    "yaml",
    "headless",
    "crud",
    "backend-as-a-service",
    "baas",
    "cms",
    "sqlite",
    "storage"
  ],
  "scripts": {
    "create-dist": "mkdir dist",
    "build": "rm -fr ./dist && npm run create-dist && nest build && cd ../admin && npm run build-admin-in-bundle",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nodemon",
    "dev": "nodemon",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/manifest/main",
    "seed": "node dist/manifest/src/seed/scripts/seed.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit:ci && npm run test:e2e:ci",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:sqlite": "jest --config ./e2e/jest-e2e.sqlite-config.json",
    "test:e2e:postgres": "jest --config ./e2e/jest-e2e.pg-config.json",
    "test:e2e:mysql": "jest --config ./e2e/jest-e2e.mysql-config.json",
    "test:e2e": "npm run test:e2e:sqlite && npm run test:e2e:postgres",
    "test:e2e:ci": "npm run test:e2e:sqlite -- --ci && npm run test:e2e:postgres -- --ci",
    "test:unit": "jest --config ./jest.config.json",
    "test:unit:ci": "jest --config ./jest.config.json --ci --coverage",
    "postbuild": "rm -fr ./dist/admin/dist && rm ./dist/tsconfig.build.tsbuildinfo",
    "postpublish": "node ../../../scripts/update-package.js"
  },
  "files": [
    "/dist",
    "dist/admin",
    "scripts",
    "README.md"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.812.0",
    "@faker-js/faker": "^9.8.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/platform-express": "^11.1.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cli-table": "^0.3.11",
    "connect-livereload": "^0.6.1",
    "dasherize": "^2.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "livereload": "^0.9.3",
    "mock-fs": "^5.5.0",
    "mysql2": "^3.14.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.2",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.24",
    "uniqid": "^5.4.0",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@codecov/bundle-analyzer": "^1.9.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@testcontainers/mysql": "^10.27.0",
    "@testcontainers/postgresql": "^10.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/dasherize": "^2.0.3",
    "@types/express": "^5.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node-fetch": "^2.6.12",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "fs": "^0.0.1-security",
    "jest": "^29.7.0",
    "path": "^0.12.7",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
