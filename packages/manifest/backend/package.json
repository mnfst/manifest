{
  "name": "@manifest/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build && pnpm run build:tsx",
    "build:tsx": "swc src/email/templates/password-reset.tsx src/email/templates/invitation.tsx src/email/templates/email-change-verification.tsx src/email/templates/components/*.tsx --out-dir dist --config-file .swcrc --strip-leading-paths",
    "dev": "TS_NODE_TRANSPILE_ONLY=true node --env-file=.env --require ts-node/register src/main.ts",
    "start": "nest start",
    "start:prod": "node dist/main",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "db:init": "ts-node src/scripts/init-db.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@manifest/nodes": "workspace:*",
    "@manifest/shared": "workspace:*",
    "@langchain/core": "^0.3.26",
    "@langchain/openai": "^0.3.17",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^10.0.2",
    "@react-email/components": "^1.0.4",
    "@react-email/render": "^2.0.2",
    "@thallesp/nestjs-better-auth": "^2.2.0",
    "bcrypt": "^5.1.1",
    "better-auth": "^1.4.10",
    "better-sqlite3": "^11.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "mailgun.js": "^12.6.0",
    "multer": "^2.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "zod": "^3.24.1",
    "vm2": "^3.10.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/platform-socket.io": "^11.1.11",
    "@nestjs/testing": "^10.4.15",
    "@nestjs/websockets": "^11.1.11",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@swc/jest": "^0.2.37",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "node-addon-api": "^8.3.1",
    "node-gyp": "^11.2.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
