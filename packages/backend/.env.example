# =============================================================================
# SECURITY CONFIGURATION (Required in Production)
# =============================================================================

# Authentication secret for session signing and encryption
# Generate with: openssl rand -base64 32
# REQUIRED in production - app will not start without it
BETTER_AUTH_SECRET=

# Allowed CORS origins (comma-separated)
# Example: https://myapp.example.com,https://admin.example.com
# If not set, only same-origin and Railway domains are allowed in production
ALLOWED_ORIGINS=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database file (default: ./data/app.db)
DATABASE_PATH=./data/app.db

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3847)
PORT=3847

# Node environment (development | production)
NODE_ENV=development

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_PROVIDER=console
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Manifest
APP_URL=http://localhost:5176

# Mailgun Configuration (required if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=key-xxx
MAILGUN_DOMAIN=mg.example.com
MAILGUN_EU_REGION=false

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API key for agent functionality
# If not set, agent features will use mock responses
OPENAI_API_KEY=
