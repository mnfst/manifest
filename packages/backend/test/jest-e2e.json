{
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.mjs$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(better-auth|better-call|@better-auth)/)"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}
